@model IQueryable<ServiceItem>

@if(Model?.Any()==true)
{
    <section>
        <h2>Наши услуги</h2>
        <ul class="small-image-list">
            @foreach(var item in Model)
            {
                <li>
                    <a asp-area="" asp-controller="Services" asp-action="Index" asp-route-id="@item.Id">
                        <img src="~/images/@item.TitleImagePath" alt="" class="left"/>
                    </a>
                    <h4>
                        @item.Title
                    </h4>
                    <p>
                        @item.Subtitle
                    </p>
                </li>
            }
        </ul>
    </section>
}
